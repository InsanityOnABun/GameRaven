<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aioGlobalWrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/aioTopSep"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33B5E5"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/aioHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/aioMainWrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/aioTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="GameRaven"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="?attr/themedTextColor" />

            <RelativeLayout
                android:id="@+id/aioPageJumperWrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aioTitle"
                android:visibility="gone" >

                <View
                    android:id="@+id/aioPJTopSep"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="3dp"
                    android:background="#33B5E5"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/aioFirstPage"
                    style="@style/Widget.Sherlock.ActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/aioPJTopSep"
                    android:enabled="false"
                    android:minHeight="30dp"
                    android:minWidth="46dp"
                    android:text="&lt;&lt;"
                    android:textColor="?attr/themedPageJumperColor" />

                <View
                    android:id="@+id/aioFirstPrevSep"
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_alignBottom="@+id/aioFirstPage"
                    android:layout_alignTop="@+id/aioFirstPage"
                    android:layout_toRightOf="@+id/aioFirstPage"
                    android:background="#33B5E5"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/aioPreviousPage"
                    style="@style/Widget.Sherlock.ActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/aioFirstPage"
                    android:layout_alignBottom="@+id/aioFirstPage"
                    android:layout_toRightOf="@+id/aioFirstPrevSep"
                    android:enabled="false"
                    android:minHeight="30dp"
                    android:minWidth="46dp"
                    android:text="&lt;"
                    android:textColor="?attr/themedPageJumperColor" />

                <Button
                    android:id="@+id/aioLastPage"
                    style="@style/Widget.Sherlock.ActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/aioFirstPage"
                    android:layout_alignBottom="@+id/aioPreviousPage"
                    android:layout_alignParentRight="true"
                    android:enabled="false"
                    android:minHeight="30dp"
                    android:minWidth="46dp"
                    android:text=">>"
                    android:textColor="?attr/themedPageJumperColor" />

                <View
                    android:id="@+id/aioNextLastSep"
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_alignBottom="@+id/aioFirstPage"
                    android:layout_alignTop="@+id/aioFirstPage"
                    android:layout_toLeftOf="@+id/aioLastPage"
                    android:background="#33B5E5"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/aioNextPage"
                    style="@style/Widget.Sherlock.ActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/aioFirstPage"
                    android:layout_alignBottom="@+id/aioLastPage"
                    android:layout_toLeftOf="@+id/aioNextLastSep"
                    android:enabled="false"
                    android:minHeight="30dp"
                    android:minWidth="46dp"
                    android:text=">"
                    android:textColor="?attr/themedPageJumperColor" />

                <TextView
                    android:id="@+id/aioPageLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/aioNextPage"
                    android:layout_toRightOf="@+id/aioPreviousPage"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/aioSep"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/holo_blue"
            android:visibility="visible" />
    </LinearLayout>

    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/aioScroller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/aioPostWrapper"
        android:layout_below="@+id/aioHeader" >
    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

    <LinearLayout
        android:id="@+id/aioPostWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="5dp"
        android:visibility="visible" >

        <View
            android:id="@+id/aioPWSep"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="3dp"
            android:background="#33B5E5"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/aioTitleWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/aioPostTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Title"
                android:lines="1"
                android:maxLength="80" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/aioTitleCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="12sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/aioPostBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Body"
            android:inputType="textMultiLine"
            android:lines="4" />

        <TextView
            android:id="@+id/aioBodyCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp" />

        <View
            android:id="@+id/aioPostButtonSep"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="3dp"
            android:background="#33B5E5"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/aioPostButtonWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/aioPostCancel"
                style="@style/Widget.Sherlock.ActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:onClick="postCancel"
                android:text="Cancel" />

            <View
                android:id="@+id/aioPollSep"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#33B5E5"
                android:visibility="gone" />

            <Button
                android:id="@+id/aioPollOptions"
                style="@style/Widget.Sherlock.ActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:onClick="postPollOptions"
                android:text="Poll..."
                android:visibility="gone" />

            <View
                android:id="@+id/aioPostSep"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#33B5E5"
                android:visibility="visible" />

            <Button
                android:id="@+id/aioPostDo"
                style="@style/Widget.Sherlock.ActionButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:onClick="postDo"
                android:text="Post" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>