<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/huWrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <CheckedTextView
        android:id="@+id/huDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="Delete?"
        android:visibility="gone" />

    <EditText
        android:id="@+id/huName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/huLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Label" />

    <LinearLayout
        android:id="@+id/huColorWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp" >

        <View
            android:id="@+id/huColorSepL"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:background="#33B5E5"
            android:visibility="visible" />

        <Button
            android:id="@+id/huSetColor"
            style="@style/Widget.AppCompat.ActionButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:text="Set Color" />

        <View
            android:id="@+id/huColorSepR"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="4dp"
            android:background="#33B5E5"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/huColorVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-16777216"
        android:visibility="gone" />

</LinearLayout>