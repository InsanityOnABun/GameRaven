<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pmMainWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/item_padding_vertical"
    android:paddingEnd="@dimen/item_padding_horizontal"
    android:paddingStart="@dimen/item_padding_horizontal"
    android:paddingTop="@dimen/item_padding_vertical"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/mentionUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp"
        tools:text="Corrupt_Power" />

    <TextView
        android:id="@+id/mentionSep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" : "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/mentionUser"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/mentionBoard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp"
        app:layout_constraintEnd_toStartOf="@+id/mentionTime"
        app:layout_constraintStart_toEndOf="@+id/mentionSep"
        tools:text="GameRaven Development &amp; Discussion" />

    <TextView
        android:id="@+id/mentionTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="3 hours ago" />

    <TextView
        android:id="@+id/mentionTopic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:lines="2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mentionUser"
        tools:text="beep bep" />
</androidx.constraintlayout.widget.ConstraintLayout>
